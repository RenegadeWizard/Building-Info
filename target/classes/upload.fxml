<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      stylesheets="style.css"
    fx:id="uploadBorder"
    id="roomBorderP">
    <top>
        <HBox style="-fx-spacing: 20px; -fx-alignment: center-left;">
            <Button id="arrow" onAction="#returnTo">
                <graphic>
                    <ImageView>
                        <Image url="img/arrow.png" requestedWidth="40.0" preserveRatio="true"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label id="title">Upload</Label>
        </HBox>
    </top>
    <center>
        <HBox style="-fx-alignment: center; -fx-spacing: 250px">
            <ImageView fx:id="buildingImage" id="buildingImage">
                <Image url="img/building.png"/>
            </ImageView>

            <VBox id="uploadFiles">
                <Button styleClass="plusButton" onAction="#addFile">
                    <graphic>
                        <ImageView>
                            <Image url="img/plus.png" requestedWidth="100.0" preserveRatio="true"/>
                        </ImageView>
                    </graphic>
                </Button>
                <VBox style="-fx-spacing: 20px; -fx-alignment: center;">
                    <Label fx:id="fileLabel"/>
                    <Button id="uploadButton" onAction="#uploadFile">Upload</Button>
                </VBox>
            </VBox>
        </HBox>

    </center>
</BorderPane>
