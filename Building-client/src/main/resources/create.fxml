<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="style.css"
            fx:id="borderP"
            id="roomBorderP">
    <top>
        <HBox style="-fx-spacing: 20px; -fx-alignment: center-left">
            <Button id="arrow" onAction="#returnTo">
                <graphic>
                    <ImageView>
                        <Image url="img/arrow.png" requestedWidth="40.0" preserveRatio="true"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label id="title">Create</Label>
        </HBox>

    </top>
    <center>
        <HBox fx:id="buildingHbox" styleClass="buttonsHbox">
            <Button id="plus" onAction="#plusButton">PLUS</Button>
        </HBox>
    </center>
    <bottom>
        <BorderPane>
            <right>
                <Button id="uploadButton" onAction="#save">Save</Button>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
